<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center">

    <TextView
        android:id="@+id/listview_code_name"
        android:layout_width="279dp"
        android:layout_height="28dp"
        android:layout_marginTop="16dp"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:textSize="25sp"
        android:text="Code Name"
        app:layout_constraintStart_toEndOf="@+id/listview_code_image"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/listview_code_image"
        android:layout_width="48dp"
        android:layout_height="49dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/listview_code_points"
        android:layout_width="279dp"
        android:layout_height="19dp"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:textSize="15sp"
        android:text="# Points"
        app:layout_constraintStart_toEndOf="@+id/listview_code_image"
        app:layout_constraintTop_toBottomOf="@+id/listview_code_name" />

    <ImageButton
        android:id="@+id/listview_delete_button"
        android:layout_width="56dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#595759"
        android:scaleType="fitXY"
        android:src="@drawable/delete_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/listview_code_name"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>



