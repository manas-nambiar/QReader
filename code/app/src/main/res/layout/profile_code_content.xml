<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="10dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="10dp"
    android:padding="3dp"
    android:backgroundTint="@color/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background">

        <ImageView
            android:id="@+id/profile_creature_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/sample_circle" />

        <TextView
            android:id="@+id/profile_code_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/profile_creature_img"
            android:singleLine="true"
            android:text="Creature name"
            android:textColor="@color/all_white"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/profile_code_points"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_code_txt"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="-3dp"
            android:layout_toRightOf="@id/profile_creature_img"
            android:singleLine="true"
            android:text="Points"
            android:textColor="@color/all_white"
            android:textSize="14dp"/>
        <TextView
            android:id="@+id/profile_num_of_scans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_code_points"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="-3dp"
            android:layout_toRightOf="@id/profile_creature_img"
            android:singleLine="true"
            android:text="Scanned by X Players"
            android:textColor="@color/all_white"
            android:textSize="14dp"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>